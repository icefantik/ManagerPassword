<Window x:Class="ManagerPassword.SearchWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ManagerPassword"
        mc:Ignorable="d"
        Title="SearchWindow" Height="130" Width="550" ResizeMode="NoResize">
    <Grid>
        <Grid.ColumnDefinitions>

            <ColumnDefinition Width="329*"/>
            <ColumnDefinition Width="110*"/>
            <ColumnDefinition Width="111*"/>

        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="11*" />
            <RowDefinition Height="20*"/>
            <RowDefinition Height="26*"/>
        </Grid.RowDefinitions>
        <TextBox x:Name="searchTextBox" Grid.Column="0" Margin="0,10,0,0" Grid.Row="1"/>
        <ComboBox x:Name="whatSearch" Grid.Column="1" SelectionChanged="whatSearch_SelectionChanged" Margin="0,10,0,0" Grid.Row="1" />
        <Button Grid.Column="2" Click="Search_Click" Margin="0,10,0,0" Grid.Row="1">Search</Button>
        
    </Grid>
</Window>
