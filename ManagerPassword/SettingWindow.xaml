<Window x:Class="ManagerPassword.SettingWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ManagerPassword"
        mc:Ignorable="d"
        Title="SettingWindow" Height="450" Width="450" ResizeMode="NoResize">
    <Grid>
        <TextBlock TextWrapping="Wrap" Grid.Column="1" Grid.Row="2" Text="Длина генерируемого пароля" TextAlignment="Center"/>
        <TextBlock x:Name="counterScrollBar" Text="1" FontSize="55" Grid.Column="1" Grid.Row="3" TextAlignment="Center"/>
        <ScrollBar x:Name="scrollBar" Orientation="Vertical" Scroll="OnScroll" Width ="19" Grid.Column="1" Grid.Row="2" Minimum="1" Maximum="50" SmallChange="1" HorizontalAlignment="Left" Margin="81,51,0,0" Grid.RowSpan="2"/>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="349*" />
            <ColumnDefinition Width="100*" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="41*" />
            <RowDefinition Height="59*" />
            <RowDefinition Height="51*" />
            <RowDefinition Height="80*" />
            <RowDefinition Height="197*"/>
        </Grid.RowDefinitions>
    </Grid>
</Window>
